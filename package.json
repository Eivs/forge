{
  "name": "forge",
  "version": "0.1.0",
  "description": "AI assistant desktop application with multiple model support",
  "main": "./dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev --outDir=dist --noSandbox",
    "build": "electron-vite build --outDir=dist",
    "start": "ts-node src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "generate-db": "node scripts/generate-db.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "postinstall": "install-app-deps",
    "generate-icons": "node scripts/generate-icons.js",
    "pack": "npm run generate-db && npm run build && electron-builder --dir",
    "dist": "npm run generate-db && npm run build && electron-builder",
    "dist:win": "npm run generate-db && npm run build && electron-builder --win",
    "dist:mac": "npm run generate-db && npm run build && electron-builder --mac --config.removePackageScripts=true --config.asar=true",
    "dist:linux": "npm run generate-db && npm run build && electron-builder --linux",
    "publish": "npm run generate-db && npm run build && electron-builder --publish always"
  },
  "keywords": [
    "electron",
    "ai",
    "assistant",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.17",
    "electron": "^29.1.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "electron-icon-maker": "^0.0.5",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prisma": "^6.6.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.29.1",
    "vite": "^6.2.6"
  },
  "dependencies": {
    "@langchain/langgraph": "^0.2.64",
    "@langchain/mcp-adapters": "^0.4.2",
    "@langchain/openai": "^0.5.5",
    "@modelcontextprotocol/sdk": "^1.10.0",
    "@prisma/client": "^6.6.0",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-slider": "^1.2.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@radix-ui/themes": "^3.2.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "langchain": "^0.3.21",
    "mermaid": "^11.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "unified": "^11.0.5",
    "zustand": "^4.5.1"
  },
  "engines": {
    "node": ">=18.20.8"
  }
}
